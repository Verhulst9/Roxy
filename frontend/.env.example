# Live2D Frontend Configuration
# Copy this file to .env.local and adjust values as needed

# WebSocket URL for nakari API
# Default: ws://localhost:8000/api/ws
VITE_API_URL=ws://localhost:8000/api/ws

# API Host (alternative to VITE_API_URL)
# VITE_API_HOST=localhost
# VITE_API_PORT=8000

# Live2D Model URL
# Default: /models/Haru/Haru.model3.json
VITE_MODEL_URL=/models/Haru/Haru.model3.json

# Enable audio playback
VITE_ENABLE_AUDIO=true

# Enable lip-sync
VITE_ENABLE_LIP_SYNC=true
